web1:
  document_root: public
  php_version: 5.5.9
  php_extensions:
    - mbstring
    - mcrypt
    - pdo_mysql
    - redis
    - zip
    - xcache
  shared_writable_dir
    - storage/app:
    - storage/logs
    - storage/framework/cache
    - storage/framework/sessions
    - storage/framework/views
    - database/sqlite
  after_build:
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install --prefer-source"
  after_deploy:
    - "rm -f storage/framework/cache/*"
    - "rm -f storage/framework/views/*"
    - "rm -f storage/logs/*.log"
  before_deploy:
    - "if [ ! -f database/sqlite/production.sqlite ]; then touch database/sqlite/production.sqlite; fi;"
    - "php artisan migrate"
